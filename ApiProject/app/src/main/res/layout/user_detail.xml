<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/btnPoprzedni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_before_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/btnNastepny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_navigate_next_black_24dp"
        android:layout_alignTop="@+id/btnPoprzedni"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/detail_margin"
        android:layout_toEndOf="@+id/btnPoprzedni"
        style="@style/detail"
        android:text="TextView" />

    <TextView
        android:id="@+id/user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin"
        android:layout_marginBottom="@dimen/detail_margin"
        android:layout_toEndOf="@+id/btnPoprzedni"
        android:layout_below="@+id/user_name"
        style="@style/detail"
        android:text="TextView" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin"
        android:layout_marginBottom="@dimen/detail_margin"
        android:layout_toEndOf="@+id/btnPoprzedni"
        android:layout_below="@+id/user_nick"
        style="@style/detail"
        android:text="TextView" />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin"
        android:layout_marginBottom="@dimen/detail_margin"
        android:layout_toEndOf="@+id/btnPoprzedni"
        android:layout_below="@+id/user_email"
        style="@style/detail"
        android:text="TextView" />

    <TextView
        android:id="@+id/user_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/user_phone"
        android:layout_marginTop="@dimen/detail_margin"
        android:layout_marginBottom="20dp"
        style="@style/detail"
        android:layout_toEndOf="@+id/btnPoprzedni" />

</RelativeLayout>