<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#22ee22</item>
    </style>

    <style name="Buttons" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tvCalories" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="tvAtlas" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="tvNoName" parent="@android:style/TextAppearance">
        <item name="android:textColor">#555</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="tvNameOfMeal" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
    </style>

    <style name="tvAllCalories" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF2400</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="tvProductsName" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="tvProductsWeight" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">#44ff44</item>
    </style>

    <style name="tvWorkout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">45dp</item>
    </style>

    <style name="tvAddProducts" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000 </item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tvAddProductsSmaller" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
