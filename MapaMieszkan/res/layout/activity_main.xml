<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mapamieszkan.MainActivity" >

    <EditText
        android:id="@+id/Login"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:hint="Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="textPersonName" 
        style="@style/TextFields" />

    <TextView
        android:id="@+id/Zarejestruj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Zaloguj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/Zarejestruj"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0060C0" />

    <Button
        android:id="@+id/Zaloguj"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Haslo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/Logowanie"
        style="@style/Buttons" />

    <EditText
        android:id="@+id/Haslo"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/Login"
        android:hint="HasÅ‚o"
        android:layout_below="@+id/Login"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="textPassword"
        style="@style/TextFields" />

</RelativeLayout>
</ScrollView>