<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="MyTextView" parent="@android:style/TextAppearance">    
     <item name="android:textSize">17sp</item>     
     <item name="android:textColor">#0060C0</item>    
    </style> 
    
     <style name="MyTextViewMO" parent="@android:style/TextAppearance">    
     <item name="android:textSize">18sp</item>     
     <item name="android:textColor">#0060C0</item>    
    </style> 
    
     <style name="ListView" parent="@android:style/TextAppearance">    
     <item name="android:textSize">12sp</item>     
     <item name="android:textColor">#0060C0</item>    
    </style> 

    <style name="Spinner" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="TextFields" parent="@android:style/TextAppearance">
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
     </style>
     
    <style name="TextFieldsSpinner" parent="@android:style/TextAppearance">
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">17sp</item>
     </style>
     
    <style name="Buttons" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>